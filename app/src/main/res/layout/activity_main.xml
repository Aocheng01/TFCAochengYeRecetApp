        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp" android:text="Buscar"
        app:layout_constraintBottom_toBottomOf="@+id/editTextSearchQuery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextSearchQuery" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"  android:text="Cerrar SesiÃ³n"
        app:layout_constraintEnd_toEndOf="@+id/buttonSearch" app:layout_constraintTop_toBottomOf="@+id/buttonSearch" /> <androidx.recyclerview.widget.RecyclerView
