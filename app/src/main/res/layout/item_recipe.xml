<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"  android:padding="12dp"
    android:gravity="center_vertical">

    <ImageView
    android:id="@+id/imageViewRecipe"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:scaleType="centerCrop" android:layout_marginEnd="12dp"
    tools:srcCompat="@mipmap/ic_launcher" /> <LinearLayout
    android:layout_width="0dp" android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewRecipeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Nombre de la Receta Ejemplo" />

    <TextView
        android:id="@+id/textViewIngredientCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        tools:text="5 ingredientes" />
</LinearLayout>

</LinearLayout>